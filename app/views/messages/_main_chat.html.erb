<div class="main-chat">

  <div class="chat-header">
    <div class="left-header">
      <div class="chat-name">
        <%= @room.name %>
      </div>
    </div>
    <div class="rigtht-header">
      <div class="chat-destroy">
        <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
      </div>  
    </div>
  </div>

  <div class="chat-message">
    <%= render partial: 'message', collection: @messages %>
  </div>

 <%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="input-form">
    <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'text-send' %>
<% end %>

</div>  